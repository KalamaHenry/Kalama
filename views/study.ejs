		<div class="con">
			<!-- 左边 -->
			<div class="con-left">
				<div class="con-title">
					<ul>
						<li><a href="#" class="sort">排序:</a></li>
						<li><a href="#" class="defa current">默认</a></li>
						<li><a href="#" class='time'>按更新时间</a></li>
					</ul>
				</div>
				<!-- 文章 -->
				<div class="article">
					<%for(i=0;i<more;i++){%>
						<div class="item item-float">
							<a href="#" class="toDetail" onclick='toDetail(this)'>
								<span class="_id"><%=result[i]._id%></span>
								<h1 class="title"><%= result[i].title %></h1>
								<span class="left"></span>
								<div class="points">
									<p><%= result[i].con[0].conTit+result[i].con[0].conMain %></p>
									<ul>
										<li><span class="class-icon"></span><%= result[i].category%></li>
										<li><span class="time-icon"></span><%= result[i].time%></li>
										<li><span class="author-icon"></span><%= result[i].author%></li>
									</ul>
								</div>
							</a>
						</div>
					<%}%>
				</div>
			</div>
			<div class="con-right">
				<div class="personal">
