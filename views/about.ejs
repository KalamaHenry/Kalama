		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="HandheldFriendly" content="true">
		<title>学无止境</title>
		<link rel="shortcut icon" href="/images/favicon.ico">
		<link rel="stylesheet" href="/stylesheets/cssreset.css">
		<link rel="stylesheet" href="/stylesheets/index.css">
		<link rel="stylesheet" href="/stylesheets/study.css">
		<link rel="stylesheet" href="/stylesheets/about.css">
	</head>
	<body>
		<div class="myNav">
			<nav class="nav-wrap">
			    <div class="navbar-header">
				  <ul class="navbar-toggle">
				        <li class="icon-bar icon-bar1"></li>
				        <li class="icon-bar icon-bar2"></li>
				        <li class="icon-bar icon-bar3"></li>
			      </ul> 
			      <a class="navbar-brand" href="/index">Kalama博客</a>
			    </div>

			    <div class="navbar-collapse">
			      <ul class="navbar-nav">
			        <li><a href="/index">首页</a></li>
			        <li><a href="/about" class="current">关于我</a></li>
			        <li class="slideDown">
			        	<a href="/study">学无止境</a>
			        	<ul>
			        		<li><a href="/study?id=HTML">HTML</a></li>
			        		<li><a href="/study?id=CSS">CSS</a></li>
			        		<li><a href="/study?id=JavaScript">JavaScript</a></li>
			        		<li><a href="/study?id=jQuery">jQuery</a></li>
			        	</ul>
			        </li>
			        <li class="slideDown">
			        	<a href="/live">慢生活</a>
 			        	<ul>
			        		<li><a href="/study?id=HTML">HTML</a></li>
			        		<li><a href="/study?id=CSS">CSS</a></li>
			        		<li><a href="/study?id=JavaScript">JavaScript</a></li>
			        		<li><a href="/study?id=jQuery">jQuery</a></li>
			        	</ul>	 			        	
			        </li>
			        <li><a href="#">时间轴</a></li>
			        <li><a href="/write">发表文章</a></li>
			      </ul>
			    </div>
			</nav>
		</div>

		<div class="big_bg"><img src="/images/study_bg.png" alt=""></div>

		<div class="con">
			<h1>账号设置</h1>
			<p class="tit">个人资料</p>
			<form>
				<ul>
					<li>
						<span class="m-left">登录名 :</span>
						<input readonly class="m-right" name="username" value="<%=result.name%>">
					</li>
					<li>
						<span class="m-left">昵称 :</span>
						<input type="text" name="nickname" value="<%=result.nickname%>">
					</li>
					<li>
						<span class="m-left">新密码 :</span>
						<input type="password" name="pass" value="<%=result.pass%>">
					</li>
					<li>
						<span class="m-left">所在城市 :</span>
						<input type="text" name="city" value="<%=result.city%>">
					</li>
					<li>
						<span class="m-left">性别 :</span>
						<input type="radio" name="sex" value="1">男
						<input type="radio" name="sex" value="2">女
					</li>
					<li>
						<span class="m-left">职业 :</span>
						<input type="text" name="job" value="<%=result.job%>">
					</li>
					<li>
						<span class="m-left">个人主页 :</span>
						<input type="text" name="web" value="<%=result.web%>">
					</li>
					<li>
						<span class="m-left about">关于自己 :</span>
						<textarea name="about"><%=result.intro%></textarea>
					</li>
					<span class="save">保存</span>
				</ul>
			</form>
		</div>	
		<div class="success">
			<img src="images/success.png" alt="成功">
			<span>成功保存了账号设置</span>
		</div>
		<script src="/javascripts/jquery.min.js"></script>
		<script src='/javascripts/index.js'></script>
		<script src='/javascripts/study.js'></script>
		<script>
			$('.save').click(function(event) {
				$.ajax({
					url:`/doAbout`,
					method:'post',
					data:$('form').serialize(),
					success:function(res){
						if(res=='ok'){
							$('.success').slideDown(600)
							setTimeout(function(){
								$('.success').fadeOut(400)
							},3000)
						}
					},
					error:function(){}
				})				
			});
		</script>
	</body>
</html>